      "name": "Grievance Endpoints",
      "item": [
        {
          "name": "Lodge Grievance",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "id": "8313e2f3-7656-438b-a4a4-acbe0bf9c010",
                "exec": [
                  "const loginReqId = \"28036272-a0bb338b-27e8-4e3d-9ee6-64adca891441\";\r",
                  "const manualToken = pm.environment.get(\"eyJhbGciOiJIUzI1NiJ9.eyJzdWIiOiI2OTU3ODBhNjZkZTcxODYyY2FmZDgxOGMiLCJyb2xlIjoiQ0lUSVpFTiIsInBob25lIjoiKzEtNTU1LTEyMy00NTY3IiwiaXNzIjoiQXV0aC1TZXJ2aWNlIiwibmFtZSI6IlJhamF0IFJhanB1dCIsImV4cCI6MTc2NzU0NzkxNCwiaWF0IjoxNzY3NTQwNzE0LCJlbWFpbCI6InJhamF0QGV4YW1wbGUuY29tIn0.6ieFLQgwGxlEkiTWroD4h4n0czG7ucazJENueZq7w1s\"); \r",
                  "function createGrievance(token) {\r",
                  "  return new Promise((resolve, reject) => {\r",
                  "    pm.sendRequest({\r",
                  "      url: 'http://localhost:9005/grievance-service/api/grievances/create',\r",
                  "      method: 'POST',\r",
                  "      header: {\r",
                  "        'Content-Type': 'application/json',\r",
                  "        'Authorization': `Bearer ${token}`\r",
                  "      },\r",
                  "      body: {\r",
                  "        mode: 'raw',\r",
                  "        raw: JSON.stringify({\r",
                  "          departmentId: \"STATE_PWD\",\r",
                  "          categoryCode: \"ROAD_INFRASTRUCTURE\",\r",
                  "          subCategoryCode: \"ROAD_DAMAGE\",\r",
                  "          description: \"Road at XXX location has been damaged after an accident which happened two weeks ago no action taken by PWD\"\r",
                  "        })\r",
                  "      }\r",
                  "    }, (err, newRes) => {\r",
                  "      if (err) return reject(err);\r",
                  "      pm.test(\"Grievance Created\", () => pm.expect(newRes.code).to.be.oneOf([201, 403]));\r",
                  "      resolve();\r",
                  "    });\r",
                  "  });\r",
                  "}\r",
                  "\r",
                  "pm.execution.runRequest(loginReqId)\r",
                  "  .then(res => {\r",
                  "    console.log(\"login status\", res.code, \"body:\", res.text());\r",
                  "    if (res.code !== 200) throw new Error(`Login failed ${res.code}`);\r",
                  "    const token = res.json().token;\r",
                  "    if (!token) throw new Error(\"Login missing token\");\r",
                  "    return createGrievance(token);\r",
                  "  })\r",
                  "  .catch(err => {\r",
                  "    console.warn(\"Login failed, trying fallback token:\", err.message);\r",
                  "    if (manualToken) {\r",
                  "      return createGrievance(manualToken);\r",
                  "    }\r",
                  "    pm.test(\"Script should not throw\", () => { throw err; });\r",
                  "  });\r",
                  ""
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {
                  "28036272-a0bb338b-27e8-4e3d-9ee6-64adca891441": {
                    "workspace": "795f5b58-0ec3-4c3a-b03a-e03103083ce8",
                    "collection": "28036272-0a0c8927-6c2e-45cb-9dc2-31f6554dfc42",
                    "location": [
                      "Grievance Service",
                      "Create a grievance"
                    ]
                  }
                }
              }
            }
